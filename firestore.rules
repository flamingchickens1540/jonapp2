rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false; // Default deny
    }

	function isMe(realUserId) { // If request is made by the user in question
     return realUserId == request.auth.uid;
    }

    function authorizedUser() { // If requesting user is authorized
    	return request.auth.uid in resource.data.users;
    }

    match /users/{userId} {
      allow read, update, delete: if isMe(userId) || authorizedUser(userId);
      allow create: if request.auth.uid != null; // Allow user create if logged in.
    }

    match /projects/{projectId} {
      allow read, update, delete: if request.auth.uid in resource.data.users;
      allow create: if request.auth.uid != null; // Allow project create if logged in.
    }

  }
}
