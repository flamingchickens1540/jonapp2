rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /supervisors/{userId} { // Allow supervisor to update itself if authenticated.
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null; // Allow supervisor create if logged in.
    }

    match /users/{userId} {
      allow read, update, delete: if request.auth.uid in resource.data.supervisors; // Allow supervisor to update user if in end user's supervisors.
      allow create: if request.auth.uid != null; // Allow user create if logged in.
    }

    match /projects/{projectId} {
      allow read, update, delete: if request.auth.uid in resource.data.authorized_users; // Allow supervisor or user update if in authorized_users.
      allow create: if request.auth.uid != null; // Allow project create if logged in.
    }

  }
}
